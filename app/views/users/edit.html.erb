<div class="editprofilebox">

	<h1>Take a moment to fill out your profile:</h1>

	<div class="container-fluid">
  		

			<div class="edit-profile-form">
				<%= form_for @user, :html => { :role => 'form', :class => 'form-horizontal', :multipart => true } do |f| %>

					<div class="form-inputs">
					<div class="row">


						<div class= "col-sm-4">

							<div class: "form-group">
							<%= f.text_field :first_name, class: "form-control", placeholder:"First Name" %>
							</div>

							<div class: "form-group">
							<%= f.text_field :last_name, class: "form-control", placeholder:"Last Name" %>
							</div>

							<div class: "form-group">
							<%= f.label :profile_image, class: "control-label" %>
							
							<%= f.file_field :image, class: "profile-picture-upload" %>
							
							</div>

						</div>

						

						<div class= "col-sm-4">
							<div class: "form-group">
							<%= f.label :twitter %>
							<%= f.text_field :twitter, class: "form-control", placeholder:"Type your update title here" %>
							</div>
						</div>

									<h3> time available </h3>
								
						<div class="col-sm-2">
									
											<%= f.label :Monday %>
											<%= f.check_box :monday, class: "time-checkbox", placeholder:"Type your update title here" %>
											<%= f.time_field :mondaytime1, class: "form-control time-box"%>
											<%= f.time_field :mondaytime2, class: "form-control time-box" %>
											<%= f.label :Tuesday %>
											<%= f.check_box :tuesday, class: "time-checkbox", placeholder:"Type your update title here" %>
											<%= f.time_field :tuesdaytime1, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.time_field :tuesdaytime2, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.label :Wednesday %>
											<%= f.check_box :wednesday, class: "time-checkbox", placeholder:"Type your update title here" %>
											<%= f.time_field :wednesdaytime1, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.time_field :wednesdaytime2, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.label :Thursday %>
											<%= f.check_box :thursday, class: "time-checkbox", placeholder:"Type your update title here" %>
											<%= f.time_field :thursdaytime1, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.time_field :thursdaytime2, class: "form-control time-box", placeholder:"Type your update title here" %>
										
						</div>
						<div class:"col-sm-2">
											<%= f.label :Friday %>
											<%= f.check_box :friday, class: "time-checkbox", placeholder:"Type your update title here" %>
											<%= f.time_field :fridaytime1, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.time_field :fridaytime2, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.label :Saturday %>
											<%= f.check_box :saturday, class: "time-checkbox", placeholder:"Type your update title here" %>
											<%= f.time_field :saturdaytime1, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.time_field :saturdaytime2, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.label :Sunday %>
											<%= f.check_box :sunday, class: "time-checkbox", placeholder:"Type your update title here" %>
											<%= f.time_field :sundaytime1, class: "form-control time-box", placeholder:"Type your update title here" %>
											<%= f.time_field :sundaytime2, class: "form-control time-box", placeholder:"Type your update title here" %>
								
						</div>

					</div>
					</div>
					
					<div class="form-actions">
					  <%= f.button :submit, class: "btn btn-default btn-lg" %>
					</div>

				<% end %>
			</div>


		</div>

</div>