<div class="profilebox">
  Search Mentor/mentee
</div>

<div class="profile-container">
  <div class="row">
    <%= form_tag users_path, :method => 'get' do %>
        <p>
          <%= label_tag :first_name, 'First Name' %>
          <%= text_field_tag 'search[first_name]', params[:search][:first_name] %>
          <%= label_tag :last_name, 'Last Name' %>
          <%= text_field_tag 'search[last_name]', params[:search][:last_name] %>
          <%= label_tag :job_title, 'Job Title' %>
          <%= text_field_tag 'search[job_title]', params[:search][:job_title] %>
          <%= label_tag :industry, 'Industry' %>
          <%= text_field_tag 'search[industry]', params[:search][:industry] %>
          <%= label_tag :week_day, 'Week Day' %>
          <%= select_tag 'search[week_day]', options_for_select(DAYS_HASH.keys, params[:search][:week_day]) %>
          <%= label_tag :time_availability, 'Time Availability' %>
          <%= text_field_tag 'search[time_availability]', params[:search][:time_availability], class: 'spinner' %>
          <%= label_tag :location, 'Location' %>
          <%= text_field_tag 'search[location]', params[:search][:location] %>
          <%= submit_tag "Search", :name => nil %>
        </p>
    <% end %>
  </div>
</div>


<div class="profile-container">
  <% @users.each do |user| %>
    <div class="row">
      <p>User Id:<%= user.id %></p>
      <p>Email:<%= user.email %></p>
      <p>First Name:<%= user.first_name %></p>
      <p>Last Name:<%= user.last_name %></p>
      <p>Job Title:<%= user.job_title %></p>
      <p>Location:<%= user.location %></p>
      <p>Industry:<%= user.industry %></p>
    </div>
  <% end %>
</div>
