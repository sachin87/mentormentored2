<div class="searchbox">
  <h1>Search</h1>
</br>

<div class="search-container search-fluid-container">
  <div class="row">
    <div class="col-md-4 search-fields-box">
      <%= form_tag users_path, :method => 'get' do %>
          <p>
            <%= label_tag :first_name, 'First Name' %>
          </br>
            <%= text_field_tag 'search[first_name]', params[:search][:first_name], class: 'form-control formstyle' %>
          
            <%= label_tag :last_name, 'Last Name' %>
          </br>
            <%= text_field_tag 'search[last_name]', params[:search][:last_name], class: 'form-control formstyle' %>
          
            <%= label_tag :job_title, 'Job Title' %>
          </br>
            <%= text_field_tag 'search[job_title]', params[:search][:job_title], class: 'form-control formstyle' %>
          
            <%= label_tag :industry, 'Industry' %>
          </br> 
            <%= text_field_tag 'search[industry]', params[:search][:industry], class: 'form-control formstyle' %>
          
            <%= label_tag :location, 'Location' %>
          </br>
            <%= text_field_tag 'search[location]', params[:search][:location], class: 'form-control formstyle' %>
          
            <%= label_tag :week_day, 'Week Day' %>
          </br>
            <%= select_tag 'search[week_day]', options_for_select(DAYS_HASH.keys, params[:search][:week_day]), {:prompt => "Select a day", class: 'form-control formstyle'} %>
          
            <%= label_tag :time_availability, 'Time Availability' %>
          </br>
            <%= text_field_tag 'search[time_availability]', params[:search][:time_availability], class: 'spinner' %>
          </br>
          
          </br>
            <%= submit_tag "Search", :name => nil, class:'btn btn-default btn-lg search-button' %>
          </p>
      <% end %>
    </div>

    <div class="col-md-6 search-result-boxes">

   


      <% @users.each do |user| %>
        <div class="media">
          <a class="pull-left">
            
            <p>
            <%= image_tag user.image, alt: "logo-image", class:'media-object img-circle' %>
          </p>
            
          </a>
          <div class="media-body">
            <h4 class="media-heading"><%= user.first_name + " " + user.last_name %>  <button type="button" class="btn btn-default btn-xs">Message</button></h4>
            </div>
              <p>Job Title:<%= user.job_title %> Location:<%= user.location %>  Industry:<%= user.industry %></p>
            </div>
          </div>
        </div>
      <% end %>

  </div>
</div>


