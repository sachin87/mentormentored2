<div class="profilebox">

  <div class="profile-title-box" >
    <%= @user.first_name %> <%= @user.last_name %> 
  </div>
  <hr>

  <div class="profile-container">

    <div class="row ">

      <div class="profile-image-box col-sm-4" >
        <%= image_tag @user.image.thumb('100x100#').url, class:'media-object img-circle' if @user.image_stored? %>
      
        <div class="profile-box1">
          <button type="button" class="btn btn-default">
          <% if @user != current_user %>
            <%= link_to 'Message', new_conversation_path(user_id: @user) %>
            </br>
          <% else %>
            <%= link_to conversations_path  do %>
              Inbox
              <span class="badge"><%= @unread_messages %></span>
            <% end %>
          <% end %>
        </button>
        </div>

       </div>

      <div class="profile-info-box col-sm-8">
        <div class="profile-fields">
        <%= show_if_allowed(@user, :email) %>
        </div>
        <div class="profile-fields">
        <%= show_if_allowed(@user, :occupation) %>
        </div>
        <div class="profile-fields">
        <%= show_if_allowed(@user, :occupation) %>
        </div>
        <div class="profile-fields">
        <%= show_if_allowed(@user, :gender) %>
        </div>
        <div class="profile-fields">
        <%= show_if_allowed(@user, :work_history) %>
        </div>
        <div class="profile-fields">
        <%= show_if_allowed(@user, :years_of_experience) %>
        </div>
        <div class="profile-fields">
        <%= show_if_allowed(@user, :summary) %>
        </div>
      </div>

    </div>

  </div>

  <hr>

  <div class="profile-extra-box">
    <% if current_user == @user %>
    <h3>Complete your profile here:</h3>
      <%= link_to 'Edit', edit_user_path(@user) %>
    <% end %>
  </div>


</div>