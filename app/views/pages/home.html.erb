
<!-- Banner -->

<div class="banner">
  <div class="banner-content">

        <div class='logo'>
        <%= image_tag("whitenetwork_cutout3.png", alt: "logo-image", class:'img-responsive logo') %>
        </div>

		<div class='opening-text'>
			<span class="opening-text-name">Mentor Mentored</span> Connect, Guide, Follow, Enlighten
		</div>
		<div class="sub-opening-text"> 
			A new kind of matching service that's dedicated to flexible education
		</div>
        <div class="sign-up-buttons">
          <button type="button" class="sign-in-button-container1 btn btn-lg">  
                <% if current_user.present? %>
                    <%= link_to 'Sign Out',destroy_user_session_path, :method => :delete %>
                <% else %>
                    <%= link_to 'Sign In Now!', new_user_session_path %>
                
         </button>
         <button type="button" class="sign-in-button-container2 btn btn-default btn-lg">
               <%= link_to 'Register Now!', new_user_registration_path %>
               <% end %>
         </button>
        </div>

         
        

  </div>
</div>

<!-- Features -->

<div class="big-container">

<div class="container-fluid">

    <div class="mid-text-container">
        <h1>Mentor Mentored</h1>
          <p>“Tell me and I forget, teach me and I may remember, involve me and I learn.”</p>
    </div>


    <div class="row">

        <div class="service-box col-sm-4">
            <div class="square animated bounceIn">
                <%= image_tag('profile.png', id: 'blah', class: 'media-img', alt: 'About') %>
            </div>
            <h2>
                Sign Up
            </h2>
            <p>
                Sign Up as either a Mentor or a Mentee/Protege on our Veteran, Student, or Entrepreneur network.
            </p>
        </div>

        <div class="service-box col-sm-4">
            <div class="square animated bounceIn">
                <%= image_tag('getnoticed.png', class: 'media-img', alt: 'About') %>
            </div>
            <h2>
                Search
            </h2>
            <p>
                View our automatically generated list of suggestions (A list of Mentors & Mentees) and do manual searches based on different criteria.  
            </p>
        </div>

        <div class="service-box col-sm-4">
            <div class="square animated bounceIn">
                <%= image_tag('nudge.png', class: 'media-img', alt: 'About') %>
            </div>
            <h2>
                Educate
            </h2>
            <p>
                Contact information is exchanged when you find a good match. From there, you have complete freedom to plan and educate!
            </p>
        </div>


    </div>

</div>

</div>

