<%= form_for :message, url: reply_conversation_path(conversation), html: { class: 'form-horizontal' } do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.text_field :subject, class: "form-control", placeholder: "Subject" %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.text_area :body, class: "form-control", placeholder: "Body" %>
        </div>
      </div>
      <div class="form-actions" >
        <%= f.submit class: 'btn-primary' %>
        <%= submit_tag 'Cancel', type: :reset, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
<% end %>